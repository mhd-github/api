{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>FirstName</th>
                <td>{{ student.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ student.lastName }}</td>
            </tr>
            <tr>
                <th>NumEtud</th>
                <td>{{ student.numEtud }}</td>
            </tr>
            <tr>
                <th>Departement</th>
                <td>{{ student.departement.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success"href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>

    {{ include('student/_delete_form.html.twig') }}
    
    <a href="{{ path('app_student_index') }}">back to list</a>

{% endblock %}
